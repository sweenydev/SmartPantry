<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="com.example.steve.smartpantry.MealPostingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_posting_title"
        android:padding="12dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_posting_address"
        android:padding="10dp"
        android:text="address"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_posting_time"
        android:padding="10dp"
        android:text="Time: 10:00 pm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_posting_recipe"
        android:paddingTop="20dp"
        android:paddingLeft="12dp"
        android:textSize="25dp"
        android:text="Recipe"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_posting_rsvp_button"
        android:text="@string/rsvp_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meal_posting_description"
        android:paddingTop="10dp"
        android:text="This is where the description will go"/>
</LinearLayout>
